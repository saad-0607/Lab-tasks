#include <stdio.h>
int main()
{
	int arr[10],i,a;
	int max = -1,n=10;
	for(i=0; i<=9;i++)
	{
		a=i+1;
		printf("Enter student %d's grades:\n" ,a);
		scanf("%d" ,&arr[i]);
	}
		printf("Array entered by student:\n");
	for(i=0; i<=9;i++)
	{
		printf(" %d \n" ,arr[i]);
	}
	for(i=0; i<9;i++)
	{
		for(int j = 0; j < 9-i;j++)
		{
			if(arr[j] > arr[j+1])
			{
				int temp;
				temp = arr[j];
				arr[j] = arr[j+1];
				arr[j+1] = temp;
			}
		}
	}
	printf("Marks in ascending order are:\n");
	for(i=0; i<9;i++)
	{
		printf(" %d \n",arr[i]);
	}
	if(n%2 == 0)
	{
		printf("Scores are even in number\n");
		float median = 0;
		median = (arr[n/2-1] + arr[n/2])/2;
		printf("The median is: %.2f " ,median);
	}
	return 0;
}
